package com.example.sskey.dms;

import android.app.AlertDialog;
import android.support.v7.app.AppCompatActivity;
import android.os.Bundle;
import android.view.View;
import android.widget.Button;
import android.widget.EditText;

import com.sskey.dms.data.remote.APIUtils;
import com.sskey.dms.data.remote.SOService;

import dmax.dialog.SpotsDialog;

public class BalanceSumActivity extends AppCompatActivity {

    EditText edtIDBS, edtSalesDate, edtSalesMan, edtTotal, edtDailyAmount;
    Button btnEditDailyAmount;
    SOService service;

    @Override
    protected void onCreate(Bundle savedInstanceState) {
        super.onCreate(savedInstanceState);
        setContentView(R.layout.activity_balance_sum);

        edtIDBS = findViewById(R.id.input_id_sum);
        edtSalesDate = findViewById(R.id.input_salesDate);
        edtSalesMan = findViewById(R.id.input_salesMan);
        edtTotal = findViewById(R.id.input_totalBalance);
        edtDailyAmount = findViewById(R.id.input_inputDailyAmount);

        btnEditDailyAmount = findViewById(R.id.editDailyToTal);

        btnEditDailyAmount.setOnClickListener(new View.OnClickListener() {
            @Override
            public void onClick(View v) {
                //init api
                service = APIUtils.getSOService();

                //show dialog please...
                final AlertDialog waitingDialog = new SpotsDialog(getBaseContext());
                waitingDialog.show();
                waitingDialog.setMessage("Vui lòng đợi...");


            }
        });

    }
}

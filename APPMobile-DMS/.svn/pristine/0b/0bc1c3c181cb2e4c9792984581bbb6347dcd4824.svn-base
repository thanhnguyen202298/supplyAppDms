    public void getCustomerList(int page) {
        service.getCustomerList(page).enqueue(new Callback<List<NguoiDung>>() {
            @Override
            public void onResponse(Call<List<NguoiDung>> call, Response<List<NguoiDung>> response) {
                ctmCall.Succeed(response);
            }

            @Override
            public void onFailure(Call<List<NguoiDung>> call, Throwable t) {
                ctmCall.Fail(t);
            }
        });
    }

